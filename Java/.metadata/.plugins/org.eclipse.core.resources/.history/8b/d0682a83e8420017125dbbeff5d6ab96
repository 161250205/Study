package numhole;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {
	public static int reverse(int num){
		String s=Integer.toString(num);
		int count=1;
		int k=0;
		for(int i=0;i<s.length();i++)
		{
			k=k + ((int)s.charAt(i)-'0')*count;
			count*=10;
		}
		return k;
	}
	public static int up(int num){
		String s=Integer.toString(num);
		int[] n = new int[s.length()];
		for(int i=0;i<s.length();i++)
		{
			n[i]=(int)(s.charAt(i)-'0');
		}
		n=bubblesort(n);
		int k=0;
		int count=1;
		for(int i=n.length-1;i>=0;i--)
		{
			k=k+n[i]*count;
			count*=10;
		}
		return k;
	}
	public static int[] bubblesort(int[] N){
		out:
		for(int i=0;i<N.length;i++){
			int count=0;
			for(int j=0;j<N.length-1;j++){
				if(N[j]>N[j+1]){
					int temp =N[j+1];
					N[j+1]=N[j];
					N[j]=temp;
					count++;
				}
			}
			if(count==0)
			{
				break out;
			}
		}
	return N;
	}
	
	public static void printhole(int num){
		System.out.printf("%04d - %04d = %04d\n",reverse(up(num)),up(num),reverse(up(num))-up(num));
		if(num!=reverse(num)&&num-reverse(num)!=6174){
			printhole(num-reverse(num));
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		int N=in.nextInt();
		
	}

}
