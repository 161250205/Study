package fxx.solar;




import java.awt.Image;

import fxx.util.Constant;

public class Planet {
	private Image I;
	private double x;
	private double y;
	private double degree=Math.PI/2;
	private double speed;
	private double a;
	private double b;
	public Planet(Image i, double x, double y, double degree, double speed) {
		I = i;
		this.x = x;
		this.y = y;
		this.degree = degree;
		this.speed = speed;
		this.a = Constant.GAME_WIDTH/2-x;
		this.b = this.a*2/3;
	}
	public void move(){
		this.degree+=speed;
		this.x=Constant.GAME_WIDTH/2+a*Math.cos(degree);
		this.y=Constant.GAME_HEIGHT/2-b*Math.sin(degree);
	}
	public double getA(){
		return a;
	}
	public double getB(){
		return b;
	}
	public Image getImage(){
		return I;
	}
	public double getX(){
		return x;
	}
	public double getY(){
		return y;
	}
}
